<a class="button" href="/">Back home</a>

<h1>Choose tree</h1>

<div class="grid">
  {{user.username}}
    {{#each tree}}
      <div class='tree-block'>
        <img src="{{image}}"/>
        <h2>{{family}}</h2>
        <p>Shape: {{shape}}</p>
        <p>Description: {{description}}</p>
        <p>Origin: {{origin}}</p>
        <p>Climate: {{climate}}</p>
        <p>Bloom: {{bloom}}</p>
        {{user.username}}
      {{#if ../user}}
        <button type="button" class="button" data-toggle="modal" data-target="#TreeModalCenter">
          Select and plant this tree
        </button>
        {{else}}
        <a class="button" href="/login">Login to plant tree {{user.username}}</a>
        {{/if}}
      </div>
    
    <!-- Modal -->

<div class="modal fade" id="TreeModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <form action="/plant/confirmation" method="POST">
    <div class="modal-content">
        
          <input class="hidden" type="text" name="image" value="{{image}}">
          <input class="hidden" type="text" name="family" value="{{family}}">
          <input class="hidden" type="text" name="shape" value="{{shape}}">
          <input class="hidden" type="text" name="description" value="{{description}}">
          <input class="hidden" type="text" name="origin" value="{{origin}}">
          <input class="hidden" type="text" name="climate" value="{{climate}}">
          <input class="hidden" type="text" name="bloom" value="{{bloom}}">
          <input class="hidden" type="text" name="creatorID" value="{{../user._id}}">
          <div class="modal-header">
            <h3 class="modal-title">Plant a {{family}}</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        This tree is available in the following countries, please select: <br/>
        <select name="country">
          {{#each this.availability}}
            <option value="{{this}}">{{this}}</option>
          {{/each}}
        </select>
      </div>
      <label class="modal-body">Now give your tree a name!<br/><input type="text" name="name" value=""></label>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button type="submit" class="button">Plant this tree</button>
      </div>
    </div>
    </form>
  </div>
</div>
    {{/each}}
</div>

